@model IEnumerable<Company>
<h2>Bedrijvenlijst</h2>
<h2 class="message">@TempData["Message"]</h2>

<a asp-controller="companyManager"
   asp-action="Insert"
   class="linkbutton">Voeg toe</a>

<br />
<br />

<table>
    <tr>
        <th>Naam</th>
        <th>Adres</th>
        <th>Land</th>
        <th colspan="2">Acties</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Address</td>
            <td>@item.Country</td>

            <td>
                <a asp-controller="companyManager"
                   asp-action="Update"
                   asp-route-id="@item.Id" class="linkbutton">Wijzig</a>
            </td>
            <td>
                <a asp-controller="companyManager"
                   asp-action="Delete"
                   asp-route-id="@item.Id" class="linkbutton">Verwijder</a>
            </td>
        </tr>
    }
</table>
